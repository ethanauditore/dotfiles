#!/usr/bin/env sh

{{ if eq .chezmoi.osRelease.id "arch" -}}
    if ! pacman -Qi emacs > /dev/null ; then
        echo "Installing emacs and dependencies for Doom:"
        sudo pacman -S emacs ripgrep fd
    fi
{{ end -}}

echo "Installing doom emacs:"
git clone --depth 1 https://github.com/hlissner/doom-emacs ~/.config/doom-emacs
~/.config/doom-emacs/bin/doom install
